{
  "WhatsApp": {
    "Provider": "Twilio",
    "Twilio": {
      "DefaultAccountSid": "YOUR_TWILIO_ACCOUNT_SID",
      "DefaultAuthToken": "YOUR_TWILIO_AUTH_TOKEN",
      "DefaultPhoneNumber": "+14155238886",
      "UseSandbox": true,
      "ApiBaseUrl": "https://api.twilio.com",
      "ApiVersion": "2010-04-01"
    },
    "GreenAPI": {
      "ApiBaseUrl": "https://api.green-api.com",
      "DefaultInstanceId": "YOUR_GREEN_API_INSTANCE_ID",
      "DefaultApiToken": "YOUR_GREEN_API_TOKEN",
      "DefaultPhoneNumberId": "YOUR_PHONE_NUMBER_ID",
      "WebhookUrl": "https://your-domain.com/api/whatsapp/webhook/green-api",
      "ApiVersion": "v3",
      "PollingIntervalSeconds": 10,
      "EnableWebhook": true,
      "AutoAcknowledgeMessages": true
    },
    "Webhook": {
      "BaseUrl": "https://your-domain.com",
      "VerificationToken": "your-webhook-verification-token",
      "ValidateSignature": true,
      "MaxPayloadSizeBytes": 1048576,
      "TimeoutSeconds": 10
    },
    "RateLimit": {
      "MessagesPerMinute": 60,
      "MessagesPerHour": 1000,
      "MessagesPerDay": 10000,
      "Enabled": true,
      "WindowSizeMinutes": 1
    },
    "Timeout": {
      "HttpRequestTimeoutSeconds": 30,
      "ConnectionTimeoutSeconds": 10,
      "MessageSendTimeoutSeconds": 60,
      "RetryDelaySeconds": 5,
      "MaxRetryAttempts": 3
    },
    "Validation": {
      "ValidatePhoneNumbers": true,
      "ValidateMessageContent": true,
      "MaxMessageLength": 4096,
      "MaxMediaFileSizeBytes": 16777216,
      "AllowedMediaTypes": [
        "image/jpeg",
        "image/png",
        "image/gif",
        "image/webp",
        "video/mp4",
        "audio/mpeg",
        "audio/ogg",
        "application/pdf",
        "text/plain"
      ],
      "PhoneNumberRegex": "^\\+[1-9]\\d{10,14}$"
    }
  }
}