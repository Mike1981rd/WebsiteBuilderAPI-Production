# Railway Environment Variables Template
# Copy this to Railway dashboard -> Variables section
# Railway automatically provides: PORT, RAILWAY_ENVIRONMENT

# ===================================
# ASP.NET Core Configuration
# ===================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://0.0.0.0:$PORT
ASPNETCORE_DETAILEDERRORS=false

# ===================================
# Database (Supabase PostgreSQL)
# ===================================
# Get these from Supabase Dashboard -> Settings -> Database
DB_HOST=db.xxxxxxxxxxxxx.supabase.co
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=your-supabase-db-password

# Connection string (Railway will inject this)
ConnectionStrings__DefaultConnection=Host=${DB_HOST};Port=${DB_PORT};Database=${DB_DATABASE};Username=${DB_USERNAME};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true

# ===================================
# Supabase API (for auth and storage)
# ===================================
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# ===================================
# JWT Authentication
# ===================================
JWT_SECRET_KEY=your-very-long-secret-key-at-least-32-characters
JWT_ISSUER=https://your-railway-app.up.railway.app
JWT_AUDIENCE=websitebuilder-api
JWT_EXPIRY_MINUTES=1440

# ===================================
# CORS Configuration
# ===================================
# Your Vercel frontend URL
CORS_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# ===================================
# Email Configuration (SendGrid/SMTP)
# ===================================
EMAIL_FROM=noreply@yourdomain.com
SENDGRID_API_KEY=your-sendgrid-api-key
# OR SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# ===================================
# File Upload Configuration
# ===================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx

# ===================================
# Logging
# ===================================
SERILOG_MINIMUM_LEVEL=Information
SERILOG_WRITE_TO_FILE=true
SERILOG_WRITE_TO_CONSOLE=true

# ===================================
# Optional: Payment Gateway
# ===================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===================================
# Optional: Storage (if not using Supabase Storage)
# ===================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# ===================================
# Application Specific
# ===================================
ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_TIMEZONE=UTC
ENABLE_SWAGGER=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_MINUTES=1